<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="ButtonMyProfileStyle">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:background">@drawable/button_round</item>
    </style>

    <style name="UserPhotoVerticalStyle">
        <item name="android:layout_height">100dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_width">0dp</item>
        <item name="layout_constraintWidth_percent">0.3</item>
    </style>

    <style name="UserPhotoHorizontalStyle">
        <item name="android:layout_height">100dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_width">0dp</item>
        <item name="layout_constraintWidth_percent">0.28</item>
    </style>

</resources>
